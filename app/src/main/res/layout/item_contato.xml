<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/llItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#616161"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvNome"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome contato: Teste"/>

        <TextView
                android:id="@+id/tvOs"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OS: Teste"/>

        <TextView
                android:id="@+id/tvEvento"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evento: Teste"/>
        <TextView
                android:id="@+id/tvDataI"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data/Hora inicio: Teste"/>
        <TextView
                android:id="@+id/tvDataF"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data/Hora fim: Teste"/>

    </LinearLayout>

</LinearLayout>